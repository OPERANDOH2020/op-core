#!groovy
node {	
    currentBuild.result = "SUCCESS"
    echo "continueTasks: ${continueTasks}"

	try {
	   def mvnHome 
	   stage('test00') { 
	      build job: 'eu.operando.int.core.ldb.server.test.00.jnk.tsk.run', propagate: false, parameters: [booleanParam(name: 'continueTasks', value: false)]
	   }
	   stage('test01') { 
	      build job: 'eu.operando.int.core.ldb.server.test.01.jnk.tsk.run', propagate: false, parameters: [booleanParam(name: 'continueTasks', value: false)]
	   }
	   stage('test02') { 
	   }
	   stage('test03') { 
	   }	   	   
	   if (continueTasks) {
	       stage('continue') {
	   	        build job: 'eu.operando.int.jnk.tsk.run.test', wait: false
	   	   }
	   }
	   } catch (err) {

        currentBuild.result = "FAILURE"

			  emailext (
			      subject: "FAILED: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
			      body: """<p>FAILED: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]':</p>
			        <p>Check console output at &QUOT;<a href='${env.BUILD_URL}'>${env.JOB_NAME} [${env.BUILD_NUMBER}]</a>&QUOT;</p>""",
			      recipientProviders: [[$class: 'DevelopersRecipientProvider']]
			    )

        throw err
		}
}

