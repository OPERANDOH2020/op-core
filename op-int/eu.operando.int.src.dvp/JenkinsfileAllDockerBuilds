#!groovy
node {	
    currentBuild.result = "SUCCESS"
    echo "continueTasks: ${continueTasks}"

	try {
	   def mvnHome 
	   stage('Independent') { 
	      build job: 'eu.operando.int.core.mysql.server.jnk.tsk', propagate: false
	      build job: 'eu.operando.int.core.ldb.server.jnk.tsk', propagate: false	      
	   }
	   stage('Dependent lv1') { 
	   }	   	   
	   stage('Tests') { 
	   	  build job: 'eu.operando.int.core.ldb.server.test00.jnk.tsk', propagate: false
	      build job: 'eu.operando.int.core.ldb.server.test01.jnk.tsk', propagate: false
	   }
	   if (continueTasks) {
	       stage('continue') {
	   	        build job: 'eu.operando.int.jnk.tsk.run.images', wait: false
	   	   }
	   }
	  } catch (err) {

        currentBuild.result = "FAILURE"

			  emailext (
			      subject: "FAILED: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
			      body: """<p>FAILED: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]':</p>
			        <p>Check console output at &QUOT;<a href='${env.BUILD_URL}'>${env.JOB_NAME} [${env.BUILD_NUMBER}]</a>&QUOT;</p>""",
			      recipientProviders: [[$class: 'DevelopersRecipientProvider']]
			    )

        throw err
		}
}
